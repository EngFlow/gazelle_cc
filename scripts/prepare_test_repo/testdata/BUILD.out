load("@bazel_skylib//rules:build_test.bzl", "build_test")

cc_library(
    name = "lib",
    srcs = ["lib.cc"],
)

cc_binary(
    name = "app",
    srcs = ["app.cc"],
    deps = [":lib"],
)

filegroup(
    name = "package_rules",
    srcs = [
        ":app",
        ":lib",
    ],
    testonly = True,
    visibility = ["//:__pkg__"],
)

build_test(
    name = "workspace_build_test",
    targets = [
        "//:package_rules",
        "//sub/package:package_rules",
    ],
    visibility = ["//visibility:public"],
)
